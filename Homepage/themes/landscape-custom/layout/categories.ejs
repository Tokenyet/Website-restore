		<% if (theme.widgets.length) { %>
		    <div class="col-md-9">
		<% } else { %>
			<div class="col-md-12">
		<% } %>
		    <% if (site.categories.length) { %>
			    <% site.categories.sort('name').each(function(item){ %>
				    	<article class="archive-article archive-type-post">
				    	<div class="archive-year-wrap">
				        <h4 class="archive-article-title" id="<%= item.name %>" data-target="#modal-<%= item.name %>"> <%= item.name %></h4>
				        </div>
				        <div class="archives">
				            <% site.posts.sort('date', -1).forEach(function(it){ %>
				                "<%= item.name %>","<%= it.title %>"
				                            <% if (it.categories.length == 1 && it.categories.data[0]._id == item._id){ %>
				                            	<div class="archive-article-inner" id="modal-<%= item.name %>" >
				                       	            <header class="archive-article-header">
	        					       	                <h1 itemprop="name">
	               	       	                                <a class="archive-article-title" href="<%= config.root %><%= it.path %>" <% if (it.description) { %> title="<%= it.description %>" <% } %>><%= it.title %></a></li>
                   				                        </h1>
                   				                    </header>		       	                                				                        				                    				                </div>
				                            <% } %>
			                <% }); %>
			            </div>
			            </article>
			   <% }); %>
		    <% } %>
	</div> <!-- col-md-9 -->
